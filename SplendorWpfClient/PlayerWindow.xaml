<Window x:Class="SplendorWpfClient.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add player" Height="76" Width="426" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False" FocusManager.FocusedElement="{Binding ElementName=PlayerName}">
    <Grid Margin="0">
        <TextBox x:Name="PlayerName" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239" RenderTransformOrigin="-0.025,0.739" TextChanged="PlayerNameTextChanged" Grid.ColumnSpan="2" KeyUp="PlayerNameKeyUp"/>
        <Button x:Name="Ok" Content="Ok" HorizontalAlignment="Left" Margin="254,10,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="OkClick" IsEnabled="False" Grid.Column="1"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="334,10,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="CancelClick" Grid.Column="1"/>
    </Grid>
</Window>
